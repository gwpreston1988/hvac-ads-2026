# =============================================================================
# HVAC-ADS-2026 Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual credentials.
# IMPORTANT: Never commit .env to git - it contains secrets.
# Permissions should be 600 (owner read/write only): chmod 600 .env
# =============================================================================

# -----------------------------------------------------------------------------
# Google Ads API
# -----------------------------------------------------------------------------
# Customer ID (account to manage) - no dashes
GOOGLE_ADS_CUSTOMER_ID=9256598060

# Developer token from Google Ads API Center
GOOGLE_ADS_DEVELOPER_TOKEN=YOUR_DEVELOPER_TOKEN

# OAuth credentials from Google Cloud Console
GOOGLE_ADS_CLIENT_ID=YOUR_CLIENT_ID
GOOGLE_ADS_CLIENT_SECRET=YOUR_CLIENT_SECRET

# MCC account ID (if using manager account) - no dashes
GOOGLE_ADS_LOGIN_CUSTOMER_ID=5194867886

# OAuth refresh token (obtained via OAuth flow)
GOOGLE_ADS_REFRESH_TOKEN=YOUR_REFRESH_TOKEN

# -----------------------------------------------------------------------------
# Merchant Center
# -----------------------------------------------------------------------------
MERCHANT_CENTER_ID=5308355318

# -----------------------------------------------------------------------------
# Google Search Console (GSC)
# -----------------------------------------------------------------------------
# Site URL must match exactly as registered in Search Console
GSC_SITE_URL=https://buycomfortdirect.com

# -----------------------------------------------------------------------------
# Twilio (for call tracking features)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_FORWARD_TO_NUMBER=YOUR_FORWARD_TO_NUMBER

# -----------------------------------------------------------------------------
# BigCommerce (optional - for product sync)
# -----------------------------------------------------------------------------
BIGCOMMERCE_STORE_HASH=YOUR_STORE_HASH
BIGCOMMERCE_ACCESS_TOKEN=YOUR_ACCESS_TOKEN
BIGCOMMERCE_CLIENT_ID=YOUR_CLIENT_ID

# -----------------------------------------------------------------------------
# Anthropic (for AI features)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=YOUR_API_KEY

# -----------------------------------------------------------------------------
# MCP Server Configuration
# -----------------------------------------------------------------------------
MCP_PORT=8080
MCP_HOST=0.0.0.0
