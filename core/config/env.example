# =============================================================================
# HVAC-ADS-2026 Environment Variables
# Phase D0: Containerization + MCP Server
# =============================================================================
# Copy this file to .env and fill in your credentials
# =============================================================================

# -----------------------------------------------------------------------------
# MCP Server Configuration
# -----------------------------------------------------------------------------
MCP_HOST=0.0.0.0
MCP_PORT=8080

# -----------------------------------------------------------------------------
# Google Ads API (Existing - Phase A/C)
# -----------------------------------------------------------------------------
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token
GOOGLE_ADS_CLIENT_ID=your_client_id
GOOGLE_ADS_CLIENT_SECRET=your_client_secret
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token
GOOGLE_ADS_CUSTOMER_ID=your_customer_id
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your_mcc_id

# -----------------------------------------------------------------------------
# Merchant Center API (Existing - Phase A)
# -----------------------------------------------------------------------------
MERCHANT_CENTER_ID=your_merchant_id

# -----------------------------------------------------------------------------
# Google Search Console API (Phase D - Stub)
# Scope: https://www.googleapis.com/auth/webmasters.readonly
# -----------------------------------------------------------------------------
GSC_SITE_URL=https://buycomfortdirect.com
# GSC uses same OAuth credentials as Google Ads (add webmasters scope)

# -----------------------------------------------------------------------------
# Google Indexing API (Phase D - Stub)
# Scope: https://www.googleapis.com/auth/indexing
# -----------------------------------------------------------------------------
# Indexing API uses same OAuth credentials (add indexing scope)
# Note: Requires additional verification for production use

# -----------------------------------------------------------------------------
# Twilio API (Phase D - Stub)
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

